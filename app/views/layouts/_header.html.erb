<nav class="navbar navbar-light d-flex justify-content-between">
  <div class="container">
    <div class="logo">
      <a class="navbar-brand" href="<%= root_path%>">
        <img src="https://www.instagram.com/static/images/web/mobile_nav_type_logo.png/735145cfe0a4.png" alt="">
      </a>
    </div>
    <div class="m-auto">
      <form class="form-inline search-form">
        <input class="form-control mr-sm-2" type="search" placeholder="@search" aria-label="Search">
      </form>
    </div>
    <div class="user-section d-flex">
      <a href="#">
        <%= image_pack_tag 'header/home.png'%>
      </a>
      <a href="#">
        <%= image_pack_tag 'header/messenger.png'%>
      </a>
      <a href="<%= new_post_path%>" data-remote="true" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap">
        <%= image_pack_tag 'header/add.png'%>
      </a>
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= render 'posts/create_post_modal'%>
            </div>
          </div>
        </div>
      </div>
      <a href="#">
        <%= image_pack_tag 'header/compass.png'%>
      </a>
      <a href="#">
        <%= image_pack_tag 'header/heart.png'%>
      </a>
      <% if user_signed_in? %>
        <div class="dropdown">
          <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle avatar-img" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar %>
            <% else %>
              <%= image_pack_tag 'avatar/blank.jpeg' %>
            <% end %>
          </a>
          <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser">
            <li>
              <a class="dropdown-item" href="<%= user_path(current_user)%>">Profile</a>
            </li>
            <li>
              <a class="dropdown-item" href="#">Saved</a>
            </li>
            <li>
              <a class="dropdown-item" href="#">Settings</a>
            </li>
            <li>
              <a class="dropdown-item" href="#">Switch Accounts</a>
            </li>
            <hr>
            <li>
              <a class="dropdown-item" href="<%= destroy_user_session_path%>" data-method="delete">Log Out</a>
            </li>
          </ul>
        </div>
      <% else %>
        <a href="<%= new_user_session_path%>">
          <i>
            <%= image_pack_tag 'header/enter.png'%>
          </i>
        </a>
      <% end %>
    </div>
  </div>
</nav>
