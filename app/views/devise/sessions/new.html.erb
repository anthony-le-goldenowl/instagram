<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
   <div class="main-container">
      <div class="main-content">
          <div class="slide-container" style="background-image: url(<%= asset_pack_url 'media/images/login/phone-frame.png'%>);">
              <div class="slide-content" id="slide-content">
                  <img src="./images/slide (1).jpg" alt="slide image" class="active">
                  <img src="./images/slide (2).jpg" alt="slide image">
                  <img src="./images/slide (3).jpg" alt="slide image">
                  <img src="./images/slide (4).jpg" alt="slide image">
                  <img src="./images/slide (5).jpg" alt="slide image">
              </div>
          </div>
          <div class="form-container">
              <div class="form-content box">
                  <div class="logo">
                    <%= image_pack_tag 'login/logo-light.png'%>
                  </div>
                  <div class="signin-form" id="signin-form">
                      <div class="form-group">
                          <div class="animate-input">
                              <input id="user_email" autofocus autocomplete="email" type="email" value name="user[email]" placeholder="Email">
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="animate-input">
                              <input id="user_password" autocomplete="current_password" type="password" placeholder="Password" name="user[password]">
                          </div>
                      </div>
                      <div class="form-btn-group">
                        <input class="btn-login" type="submit" name="commit" value="Log in" data-disable-with="Log in">
                      </div>
                      <div class="divine">
                          <div></div>
                          <div>OR</div>
                          <div></div>
                      </div>
                      <div class="form-btn-group">
                          <button class="btn-fb">
                              <%= image_pack_tag 'login/facebook-icon.png'%>
                              <span>Log in with Facebook</span>
                          </button>
                      </div>
                      <a href="#" class="forgot-pw">Forgot password?</a>
                  </div>
              </div>
              <div class="box goto">
                  <p>
                      Don't have an account?
                      <a href="<%= new_user_registration_path%>">Sign up</a>
                  </p>
              </div>

              <div class="app-download">
                  <p>Get the app.</p>
                  <div class="store-link">
                      <a href="#">
                          <%= image_pack_tag 'login/app-store.png'%>
                      </a>
                      <a href="#">
                          <%= image_pack_tag 'login/gg-play.png'%>
                      </a>
                  </div>
              </div>
          </div>
      </div>
   </div>
    </div>
<% end %>