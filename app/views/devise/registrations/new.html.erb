<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="register-container">
      <div class="main-container">
        <div class="main-content">
          <div class="form-container">
            <div class="form-content box">
              <div class="logo">
                <%= image_pack_tag 'login/logo-light.png'%>
              </div>
              <div class="signin-form" id="signin-form">
              <div class="form-group">
                <div class="animate-input">
                    <%= f.email_field :email, autofocus:true, autocomplete: "email",  placeholder: "Email"%>
                </div>
              </div>
              <div class="form-group">
                <div class="animate-input"> 
                  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full Name"%>
                </div>
              </div>
              <div class="form-group">
                <div class="animate-input">
                  <%= f.text_field :username, autofocus: true, autocomplete: "user-name", placeholder: "User Name"%>
                </div>
              </div>
              <div class="form-group">
                <div class="animate-input">
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password"%>
                </div>
              </div>
              <div class="form-btn-group">
                <input type="submit" name="commit" value="Register" data-disable-with="Register" class="btn-register" id="register-btn">
              </div>
              <div class="divine">
                <div></div>
                <div>OR</div>
                <div></div>
              </div>
              <div class="form-btn-group">
                <button class="btn-fb">
                  <%= image_pack_tag 'login/facebook-icon.png'%>
                  <span>Log in with Facebook</span>
                </button>
              </div>
            </div>
            </div>
            <div class="box goto">
              <p>
                Having an account?
                <a href="<%= new_user_session_path%>">Log in</a>
              </p>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div>
<% end %>

